<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
    <link href="~/Content/Basic.css" rel="stylesheet" />
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <title>@ViewBag.Title - Joole Application</title>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*Header*@
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h3 class="my-0 mr-md-auto font-weight-normal" style="font-size:3rem;font-family: 'Lobster', cursive;">Joole</h3>
        <nav class="my-2 my-md-0 mr-md-3">
        </nav>
        <a class="navbar-brand" style="font-family: 'Lobster', cursive;">Welcome! @ViewBag.userName</a>
        <img src="@ViewBag.userImgUrl" id="icon" alt="User Icon" style="border-radius:50%;width:4rem;margin-right:1rem;" />
        @Html.ActionLink("Sign Out", "LogOut", "User", null, new { @class = "btn btn-outline-primary" })
    </div>

    <div class="container">
        @RenderBody()
    </div>



    <nav class="navbar fixed-bottom navbar-expand-sm navbar-dark bg-dark">
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <span class="text-muted">@DateTime.Now.Year - Joole Application</span>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

